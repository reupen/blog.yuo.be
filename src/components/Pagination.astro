---
export interface Props {
  class?: string
  entryName: string
  nextHref?: string
  previousHref?: string
}

const { class: class_, nextHref, previousHref, entryName } = Astro.props
---

<style>
  .pagination {
    font-family: var(--sans-serif-font-family);
    display: grid;
    grid-template-columns: 1fr 1fr;
    font-size: 20px;

    .next {
      justify-self: right;
    }

    a:hover {
      &,
      i {
        text-decoration-thickness: 12%;
      }
    }

    a,
    i {
      text-decoration: underline;
      text-underline-offset: 0.25em;
      text-decoration-thickness: 7%;
    }
  }
</style>

<div class:list={["pagination", class_]}>
  <div class="previous">
    {
      previousHref && (
        <a href={previousHref}>
          <span>
            <i class="fa-solid fa-chevron-left" />
            <span class="nav-link-text">
              Newer<span class="visually-hidden"> {entryName}</span>
            </span>
          </span>
        </a>
      )
    }
  </div>
  <div class="next">
    {
      nextHref && (
        <a href={nextHref}>
          <span>
            <span class="nav-link-text">
              Older<span class="visually-hidden"> {entryName}</span>
            </span>
            <i class="fa-solid fa-chevron-right" />
          </span>
        </a>
      )
    }
  </div>
</div>
