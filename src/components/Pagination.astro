---
export interface Props {
  class?: string
  entryName: string
  nextHref?: string
  previousHref?: string
}

const { class: class_, nextHref, previousHref, entryName } = Astro.props
---

<style>
  .pagination {
    display: grid;
    grid-template-columns: 1fr 1fr;
    font-size: 20px;
    margin-top: 2rem;

    .next {
      justify-self: right;
    }

    a {
      text-underline-offset: 0.25em;

      &:not(:hover) {
        text-decoration-line: none;
      }
    }
  }
</style>

<div class:list={["pagination", class_]}>
  <div class="previous">
    {
      previousHref && (
        <a href={previousHref}>
          <i aria-hidden="true" class="fa-solid fa-chevron-left" />
          <span class="nav-link-text">
            Newer<span class="visually-hidden"> {entryName}</span>
          </span>
        </a>
      )
    }
  </div>
  <div class="next">
    {
      nextHref && (
        <a href={nextHref}>
          <span class="nav-link-text">
            Older<span class="visually-hidden"> {entryName}</span>
          </span>
          <i aria-hidden="true" class="fa-solid fa-chevron-right" />
        </a>
      )
    }
  </div>
</div>
