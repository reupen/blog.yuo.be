---
import type { ComponentProps } from "astro/types"
import { Picture } from "astro:assets"

export type Props = ComponentProps<typeof Picture>

const {
  fallbackFormat = "webp",
  formats = ["avif", "webp"],
  quality = 90,
  ...rest
} = Astro.props
---

<Picture
  fallbackFormat={fallbackFormat}
  formats={formats}
  quality={quality}
  {...rest}
/>

<style>
  .limit-height {
    max-height: calc(var(--max-body-width) / 1.5);
    width: auto;
  }

  .limit-height-slightly {
    max-height: calc(var(--max-body-width));
    width: auto;
  }
</style>
