---
import "./font-awesome.scss"
import "./Layout.pcss"

export interface Props {
  description?: string
  ogPublishedTime?: Date
  ogType?: string
  postReturnUrl?: string
  title?: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const siteTitle = "Reupen’s blog"
const siteAuthor = "Reupen Shah"
const {
  title,
  description,
  postReturnUrl,
  ogPublishedTime,
  ogType = "website",
  ...rest
} = Astro.props

const computedTitle =
  title && title !== siteTitle ? `${title} – ${siteTitle}` : siteTitle
---

<html class="auto" lang="en" {...rest}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <link href={new URL("sitemap-index.xml", Astro.site)} rel="sitemap" />
    <link href={canonicalURL} rel="canonical" />
    <link
      href={new URL("rss.xml", Astro.site)}
      rel="alternate"
      title={siteTitle}
      type="application/rss+xml"
    />
    <title>{computedTitle}</title>
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <meta property="og:title" content={computedTitle} />
    <meta property="og:site_name" content={siteTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content={ogType} />
    {
      ogPublishedTime && (
        <meta
          property="article:published_time"
          content={ogPublishedTime.toISOString()}
        />
      )
    }
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content={siteAuthor} />
    <meta name="twitter:title" content={computedTitle} />
    {description && <meta name="twitter:description" content={description} />}
  </head>
  <body>
    <header>
      <nav class="container">
        {
          (
            <a class:list={[Astro.url.pathname === "/" && "hidden"]} href="/">
              Reupen’s blog
            </a>
          )
        }
        {
          postReturnUrl && (
            <a class="small" href={postReturnUrl}>
              <i class="fa-solid fa-chevron-left" />
              All posts
            </a>
          )
        }
        <div class="small right">
          <button id="toggle-mode" hidden>
            <i class="fa-solid fa-circle-half-stroke"></i>
            <i class="fa-regular fa-sun"></i>
            <i class="fa-solid fa-moon"></i>
            <span class="visually-hidden" id="toggle-mode-text"></span>
          </button>
          <a href={new URL("rss.xml", Astro.site)}>
            <i class="fa-solid fa-rss"></i>
            RSS
          </a>
        </div>
      </nav>
    </header>
    <section class="section">
      <div class="container">
        <main><slot /></main>
      </div>
    </section>
  </body>

  <style>
    header {
      background: var(--nav-background);
      font-family: var(--sans-serif-font-family);
      font-size: 20px;
      font-weight: 500;
      padding: 0.75rem 1.5rem;

      a {
        color: var(--nav-text-colour);
        text-decoration: none;

        &:hover {
          text-decoration: underline;
          text-decoration-thickness: 12%;
        }
      }

      nav {
        display: flex;
        align-items: baseline;
        column-gap: 1rem;
        justify-content: space-between;

        i {
          text-decoration: inherit;
        }

        .right {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 0.85rem;
          margin-left: auto;
        }

        .small {
          font-size: 16px;
        }
      }
    }

    #toggle-mode {
      border: none;
      background: none;
      cursor: pointer;
      padding: 0;
      font-size: 16px;
    }

    :global(.auto) {
      #toggle-mode {
        .fa-circle-half-stroke,
        .fa-sun {
          display: none;
        }
      }
    }

    :global(.light) {
      #toggle-mode {
        .fa-moon,
        .fa-sun {
          display: none;
        }
      }
    }

    :global(.dark) {
      #toggle-mode {
        .fa-circle-half-stroke,
        .fa-moon {
          display: none;
        }
      }
    }
  </style>
</html>

<script>
  document.documentElement.className = localStorage.getItem("theme") ?? "auto"

  const modeToggleButton = document.getElementById("toggle-mode")
  const modeToggleButtonText = document.getElementById("toggle-mode-text")

  function updateModeButton() {
    const currentValue = localStorage.getItem("theme") ?? "auto"

    const newLabel = (() => {
      switch (currentValue) {
        case "dark":
          return "Switch to light mode"
        case "light":
          return "Switch to automatic light or dark mode"
        default:
          return "Switch to dark mode"
      }
    })()

    if (modeToggleButtonText) {
      modeToggleButtonText.innerText = newLabel
    }

    modeToggleButton?.setAttribute("title", newLabel)
  }

  modeToggleButton?.addEventListener("click", () => {
    const currentValue = localStorage.getItem("theme") ?? "auto"

    const newValue = (() => {
      switch (currentValue) {
        case "dark":
          return "light"
        case "light":
          return "auto"
        default:
          return "dark"
      }
    })()

    localStorage.setItem("theme", newValue)
    document.documentElement.className = newValue

    updateModeButton()
  })

  updateModeButton()
  modeToggleButton?.removeAttribute("hidden")
</script>
